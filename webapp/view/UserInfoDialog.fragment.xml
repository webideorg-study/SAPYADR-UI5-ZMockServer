<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="dialogUser" title="{test1>/Title}" contentWidth="200px" contentHeight="500px" resizable="true">
		<content>
			<f:SimpleForm id="SF" maxContainerCols="2">
				<f:content>
					<!--<core:Title text="Person"/>-->
					<Label text="{test1>/Field1}"/>
					<Input value="{data>/Email}"/>
					<Label text="{test1>/Field2}"/>
					<Input value="{data>/Firstname}"/>
					<Label text="{test1>/Field3}"/>
					<Input value="{data>/Lastname}"/>
					<Label text="{test1>/Field4}"/>
					<Input value="{data>/Age}"/>
					<Label text="{test1>/Field5}"/>
					<Input value="{data>/Address}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="OK" press="userSubmit"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="userCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>